pipeline {
    agent any

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('flask-docker-app')
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    bat '''
                        docker stop flask-app || exit 0
                        docker rm flask-app || exit 0
                        docker run -d --name flask-app -p 5000:5000 flask-docker-app
                    '''
                }
            }
        }
    }
}
